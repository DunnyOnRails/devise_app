<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>User image</th>
      <th>Company name</th>
      <th>Main email</th>
      <th>Main phone</th>
      <th>Office phone</th>
      <th>One line address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.username %></td>
        <td><%= profile.user_image %></td>
        <td><%= profile.company_name %></td>
        <td><%= profile.main_email %></td>
        <td><%= profile.main_phone %></td>
        <td><%= profile.office_phone %></td>
        <td><%= profile.one_line_address %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

